<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="inverse_backgroundColor">#000000</item>
        <item name="backgroundColorGray">#606060</item>
        <item name="backgroundColor">#ffffff</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="inverse_backgroundColor">#ffffff</item>
        <item name="backgroundColorGray">#aeaeae</item>
        <item name="backgroundColor">#000000</item>
    </style>
</resources>